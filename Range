input[type=range]{
    appearance: none;
    -webkit-appearance: none;
    height: 5px;
    border-radius: 10px;
    //  Chrome
    &::-webkit-slider-thumb{
        appearance: none;
        width: 15px;
        height: 15px;
        border-radius: 50%;
        border: 1px solid $medium-gray-alt;
        background-color: $white;
        margin-top: -4px;
    }
    &::-webkit-slider-runnable-track{
        border-radius: 10px;
        height: 3px;
        appearance: none;
        background-color: transparent;
        background-image: linear-gradient(45deg, $medium-blue, $dark-gray);
    }
    //  Firefox
    &::-moz-range-thumb{
        appearance: none;
        width: 15px;
        height: 15px;
        border-radius: 50%;
        border: 1px solid $medium-gray-alt;
        background-color: $white;
        box-shadow: 0 0 10px $medium-gray;
    }
    &::-moz-range-progress{
        background-color: $medium-blue;
    }
    &::-moz-range-track{
        background-color: $medium-gray;
    }

    //  IE - Edge
    &::-ms-thumb{
        appearance: none;
